# Database
DATABASE_URL=postgres://user:password@localhost:5432/daget_dev

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Discord OAuth (configured in Supabase dashboard)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Wallet Encryption (32-byte hex key)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WALLET_ENC_KEY_V1=your-64-char-hex-string
# WALLET_ENC_KEY_V2= (optional, for key rotation)

# Solana
SOLANA_CLUSTER=devnet
# SOLANA_RPC_URL= (optional custom RPC, defaults to public endpoint)

# Upstash Redis (rate limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Processor health
PROCESSOR_HEALTH_TOKEN=your-internal-token

# Sentry (optional in dev)
# SENTRY_DSN=

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
